<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.garuolis.bakingapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.udacity.garuolis.bakingapp.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.udacity.garuolis.bakingapp.generated.Provider"
            android:authorities="com.udacity.garuolis.bakingapp.provider.RecipeProvider"
            android:exported="false" />

        <activity
            android:name="com.udacity.garuolis.bakingapp.RecipeActivity"
            android:label="@string/title_activity_recipe"
            android:parentActivityName="com.udacity.garuolis.bakingapp.MainActivity" >
        </activity>

        <receiver android:name="com.udacity.garuolis.bakingapp.widget.RecipeWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recipe_widget_info" />
        </receiver>

        <activity
            android:name="com.udacity.garuolis.bakingapp.widget.RecipeWidgetConfig"
            android:label="@string/title_activity_recipe_widget_config" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.udacity.garuolis.bakingapp.com.squareup.picasso"
            android:exported="false" />
    </application>

</manifest>